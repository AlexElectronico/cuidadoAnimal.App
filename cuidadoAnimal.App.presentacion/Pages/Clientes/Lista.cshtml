@page
@model cuidadoAnimal.App.presentacion.Pages.ListaModel
@{
}
<h1>listado de clientes </h1>

<table class="table">
    <h2>estan</h2>
    
    
    @foreach (var propietario in Model.Propietario)
    {
      
      <tr>
      
        <td>@propietario.Nombres</td>
        <td>@propietario.Apellidos</td>
        
        <td>
          
        <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-IdPersona="@propietario.IdPersona">
             <i class="fas fa-info-circle fa-lg"></i>
             </a>
        </td>
        <td>
          <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-IdPersona="@propietario.IdPersona">
          <i class="fas fa-address-book fa-lg" aria-hidden="true"></i></a>
        </td>

    </tr>  
    }

</table>
<a asp-page=".\Edit" class="btn btn-primary">Adicionar Propietario</a>
